{
  "manifest_version": 2,
  "name": "alienTube",
  "version": "0.1",

  "description": "Replace YouTube comments with reddit comments.",
  "icons": {
    "48": "icons/icon.png",
    "96": "icons/icon@2.png"
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "alienTube.id@example.com",
      "strict_min_version": "53.0"
    }
  },

  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "js": [
        "dist/content_script.bundle.js"
      ],
      "run_at": "document_idle"
    }
  ],

  "background": {
    "scripts": [
      "dist/background.bundle.js"
    ]
  },

  "permissions": [
    "webNavigation",
    "tabs",
    "storage",
    "https://*.reddit.com/*"
  ],

  "options_ui": {
    "page": "src/options/index.html",
    "open_in_tab": true
  }
}
