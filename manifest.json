{
  "manifest_version": 2,
  "name": "alienTube",
  "version": "0.1",

  "description": "Replace YouTube comments with reddit comments.",
  "icons": {
    "64": "icons/icon.png"
  },

  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "js": [
        "dist/content_script.bundle.js"
      ]
    }
  ],

  "background": {
    "scripts": [
      "dist/background.bundle.js"
    ]
  },

  "permissions": [
    "webNavigation",
    "tabs",
    "https://*.reddit.com/*"
  ],

  "options_ui": {
    "page": "src/options/index.html"
  }
}
