{
  "manifest_version": 2,
  "name": "alienTube",
  "version": "0.1",

  "description": "Replace YouTube comments with reddit comments.",
  "icons": {
    "64": "icons/icon.png"
  },

  "content_scripts": [
    {
      "matches": [
        "*://*.youtube.com/*"
      ],
      "js": [
        "content_script.js"
      ]
    }
  ],

  "background": {
    "scripts": [
      "background.js"
    ]
  },

  "permissions": [
    "webNavigation", "tabs"
  ],

  "options_ui": {
    "page": "options/index.html"
  }
}
