{
  "name": "alientube",
  "version": "1.0.0",
  "description": "Reddit comments on Youtube",
  "main": "content_script.js",
  "scripts": {
    "start:firefox": "web-ext run -s dist --browser-console --start-url https://youtu.be/adzYW5DZoWs --start-url about:addons",
    "start:chrome": "web-ext run -s dist -t chromium --start-url https://youtu.be/adzYW5DZoWs",
    "start": "web-ext run -s dist -t firefox-desktop -t chromium --start-url https://youtu.be/adzYW5DZoWs",
    "clean": "rimraf dist",
    "prebuild": "npm run test",
    "build": "npm run clean && webpack --mode production --progress",
    "dev": "webpack --mode development --progress",
    "watch": "webpack --progress --watch",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore --ignore-pattern 'tests/integration' .",
    "lint:fix": "npm run lint -- --fix",
    "test": "jest",
    "test:integration": "nightwatch --env",
    "posttest": "npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/a-bravo/alientube.git"
  },
  "keywords": [
    "extension"
  ],
  "author": "a-bravo",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/a-bravo/alientube/issues"
  },
  "homepage": "https://github.com/a-bravo/alientube#readme",
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "transform": {
      ".*\\.(vue)$": "vue-jest",
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.8.6",
    "@babel/preset-env": "^7.8.6",
    "@babel/register": "^7.8.6",
    "@vue/test-utils": "1.0.0-beta.29",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "chromedriver": "^80.0.1",
    "copy-webpack-plugin": "^5.1.1",
    "css-loader": "^3.4.2",
    "dotenv-webpack": "^1.7.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-vue": "^6.2.1",
    "geckodriver": "^1.19.1",
    "jest": "^24.9.0",
    "nightwatch": "^1.3.4",
    "node-sass": "^4.13.1",
    "sass-loader": "^7.3.1",
    "vue-jest": "^3.0.5",
    "vue-loader": "^15.9.0",
    "vue-style-loader": "^4.1.2",
    "vue-template-compiler": "^2.6.11",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.11",
    "zip-webpack-plugin": "^3.0.0"
  },
  "dependencies": {
    "lodash": "^4.17.15",
    "vue": "^2.6.11",
    "webextension-polyfill": "^0.5.0"
  }
}
